<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/transparent"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:background="@drawable/round_corner_white"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/activity_margin_24"
            android:paddingBottom="@dimen/activity_margin_24">

        <ImageView
                android:src="@drawable/lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:padding="@dimen/activity_margin_16"
                android:text="앱을 종료하시겠습니까?\n비밀번호를 입력해주세요."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:paddingBottom="@dimen/activity_margin_16"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:paddingRight="@dimen/activity_margin_16"
                    android:gravity="right"
                    android:text="아이디"
                    android:textSize="@dimen/text_size_20"
                    android:layout_weight="1"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"/>


            <TextView
                    android:layout_weight="2"
                    android:id="@+id/tv_id"
                    android:maxLines="1"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:paddingBottom="@dimen/activity_margin_16"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:paddingRight="@dimen/activity_margin_16"
                    android:gravity="right"
                    android:text="비밀번호"
                    android:textSize="@dimen/text_size_20"
                    android:layout_weight="1"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"/>


            <EditText
                    android:layout_weight="2"
                    android:inputType="textPassword"
                    android:id="@+id/edt_password"
                    android:maxLines="1"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:background="@color/colorWhite"
                    android:layout_weight="1"
                    android:text="확인"
                    android:id="@+id/btn_ok"
                    android:layout_width="0px"
                    android:layout_height="match_parent"/>

            <Button
                    android:background="@color/colorWhite"
                    android:layout_weight="1"
                    android:text="닫기"
                    android:id="@+id/btn_cancle"
                    android:layout_width="0px"
                    android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
            android:paddingTop="@dimen/activity_margin_16"
            android:paddingBottom="@dimen/activity_margin_16"
            android:paddingLeft="@dimen/activity_margin_16"
            android:paddingRight="@dimen/activity_margin_16"
            android:background="@drawable/circle_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <!-- 혜택 타입 -->
        <LinearLayout
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:gravity="center|center_vertical">
            <ImageView
                    android:textSize="@dimen/text_size_30"
                    android:id="@+id/img_benefit_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- 혜택 이미지 -->
        <LinearLayout
                android:layout_weight="2"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:gravity="center">

            <ImageView
                    android:id="@+id/img_benefit_item"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
        </LinearLayout>

        <!-- 혜택 내용 -->
        <LinearLayout
                android:paddingLeft="@dimen/activity_margin_16"
                android:layout_weight="4"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <!-- 혜택명 -->
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:gravity="center_vertical">
                <TextView
                        android:id="@+id/tv_benefit_title"
                        android:textSize="@dimen/text_size_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- 혜택설명 -->
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:gravity="center_vertical">
                <TextView
                        android:id="@+id/tv_benefit_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- 혜택유효기간 -->
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:gravity="center_vertical">
                <TextView
                        android:id="@+id/tv_benefit_expire"
                        android:textSize="@dimen/text_size_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>


        <!-- 혜택사용여부 -->
        <LinearLayout
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
            <ImageView
                    android:id="@+id/img_benefit_use"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textSize="@dimen/text_size_20"
                    android:id="@+id/tv_benefit_use_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>